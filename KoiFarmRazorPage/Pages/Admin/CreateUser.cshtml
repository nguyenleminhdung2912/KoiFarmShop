@page
@model KoiFarmRazorPage.Pages.Admin.CreateModel

@{
ViewData["Title"] = "Create";
Layout = "Shared/_AdminLayout";
}

<div class="container mt-5">
    <div class="card shadow-lg" style="border-radius: 12px;">
        <div class="card-header text-white" style="background-color: #1f618d;">
            <h2 class="text-center">Create User</h2>
        </div>
        
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="User.Name" class="form-label font-weight-bold"></label>
                    <input asp-for="User.Name" class="form-control" placeholder="Nhập tên người dùng" required="required"/>
                    <span asp-validation-for="User.Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="User.Email" class="form-label font-weight-bold"></label>
                    <input asp-for="User.Email" class="form-control" placeholder="Nhập email" required="required"/>
                    <span asp-validation-for="User.Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="User.Password" class="form-label font-weight-bold"></label>
                    <input asp-for="User.Password" class="form-control" placeholder="Nhập mật khẩu" required="required"/>
                    <span asp-validation-for="User.Password" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="User.Phone" class="form-label font-weight-bold"></label>
                    <input asp-for="User.Phone" class="form-control" placeholder="Nhập số điện thoại"/>
                    <span asp-validation-for="User.Phone" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="User.Role" class="form-label font-weight-bold"></label>
                    <select asp-for="User.Role" class="form-control" required="required">
                        <option value="">--Select role--</option>
                        <option value="Staff">Staff</option>
                        <option value="Customer">Customer</option>
                    </select>
                    <span asp-validation-for="User.Role" class="text-danger"></span>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success" style="font-weight: bold; width: 100px;">Create</button>
                    <a asp-page="./Index" class="btn btn-secondary ms-2" style="font-weight: bold; width: 100px;">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>
