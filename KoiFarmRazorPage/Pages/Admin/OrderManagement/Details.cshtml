@page
@model KoiFarmRazorPage.Pages.Admin.OrderManagement.DetailsModel

@{
    ViewData["Title"] = "Order Details";
    Layout = "Shared/_AdminLayout";
}

<div class="container mt-5">
    <div class="card shadow-lg" style="border-radius: 12px;">
        <div class="card-header text-white" style="background-color: #1f618d;">
            <h2 class="text-center">Thông Tin Đơn Hàng</h2>
        </div>
        <div class="card-body p-4">
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold text-secondary">
                    <i class="fas fa-fish"></i> Koi Names
                </dt>
                <dd class="col-sm-9">
                    @string.Join(", ", Model.Order.KoiFishList.Select(kf => kf.Name))
                </dd>

                <dt class="col-sm-3 font-weight-bold text-secondary">
                    <i class="fas fa-box"></i> Product Names
                </dt>
                <dd class="col-sm-9">
                    @string.Join(", ", Model.Order.ProductList.Select(kf => kf.Name))
                </dd>

                <dt class="col-sm-3 font-weight-bold text-secondary">
                    <i class="fas fa-sort-numeric-up"></i> Quantity
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Order.Quantity)
                </dd>

                <dt class="col-sm-3 font-weight-bold text-secondary">
                    <i class="fas fa-money-bill-wave"></i> Total Price
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Order.TotalPrice) VND
                </dd>

                <dt class="col-sm-3 font-weight-bold text-secondary">
                    <i class="fas fa-cogs"></i> Status
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Order.Status)
                </dd>

                <dt class="col-sm-3 font-weight-bold text-secondary">
                    <i class="fas fa-cogs"></i> Shipment
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Order.ShipmentStatus)
                </dd>

                <dt class="col-sm-3 font-weight-bold text-secondary">
                    <i class="fas fa-calendar-plus"></i> Create Date
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Order.CreateAt)
                </dd>

                <dt class="col-sm-3 font-weight-bold text-secondary">
                    <i class="fas fa-trash-alt"></i> Is Deleted
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Order.IsDeleted)
                </dd>

                <dt class="col-sm-3 font-weight-bold text-secondary">
                    <i class="fas fa-user"></i> Buyer
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Order.User.Name)
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 text-center">
        @* <a asp-page="./Edit" asp-route-id="@Model.Order.OrderId" class="btn btn-warning mx-2" style="font-weight: bold;"> *@
        @*     <i class="fas fa-edit"></i> Edit *@
        @* </a> *@
        <a asp-page="/Admin/Index" class="btn btn-secondary mx-2" style="font-weight: bold;">
            <i class="fas fa-arrow-left"></i> Back to list
        </a>
    </div>
</div>

