<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Trang mua cá Koi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/KoiFarmRazorPage.styles.css" asp-append-version="true"/>

    <style>
        /* Navbar Customization */
        .navbar {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
            color: #f3a683 !important;
        }

        .navbar-nav .nav-link {
            font-weight: 500;
            color: #555 !important;
            transition: color 0.3s ease;
        }

        .navbar-nav .nav-link:hover {
            color: #f3a683 !important;
        }

        .login-btn {
            color: #fff;
            background-color: #f3a683;
            border-radius: 20px;
            transition: background-color 0.3s ease;
        }

        .login-btn:hover {
            background-color: #e77f67;
        }

        body {
            padding-bottom: 100px; /* Thêm padding để không bị che chắn nội dung dưới cùng */
        }
        

        /* Footer Style */
        footer {
            background-color: #343a40;
            color: #f8f9fa;
            padding: 20px 0;
        }

        footer p {
            margin: 0;
        }
    </style>

</head>
<body>
<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-white fixed-top">
    <div class="container">
        <a class="navbar-brand" href="/">KoiFish Shop</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/Customer/ViewKoiFish">Xem Cá Koi</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Customer/ViewConsignment">Xem Ký Gửi Cá Koi</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Customer/ViewProduct">Sản Phẩm Cho Cá Koi</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Services">Dịch Vụ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Customer/CartPage">Giỏ hàng</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Contact">Liên Hệ</a>
                </li>
                <!-- Kiểm tra trạng thái đăng nhập và hiển thị nút Đăng nhập hoặc Tài khoản -->
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/Customer/ViewProfile">Tài Khoản</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="/Auth/Logout">Đăng Xuất</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="btn login-btn ms-2" href="/Auth/Login">Đăng Nhập</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>

<!-- Main Content -->
<div class="container mt-5 pt-5">
    @RenderBody()
</div>

<!-- Nút Feedback -->
<button type="button" class="btn btn-feedback rounded-circle" data-bs-toggle="modal" data-bs-target="#feedbackModal">
    <i class="fa-solid fa-comment"></i> <!-- Icon của nút feedback -->
</button>

<!-- Modal Feedback -->
<div class="modal fade" id="feedbackModal" tabindex="-1" aria-labelledby="feedbackModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="feedbackModalLabel">Gửi Phản Hồi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="feedbackInput" class="form-label">Chia sẻ ý kiến của bạn</label>
                        <textarea class="form-control" id="feedbackInput" rows="4" placeholder="Nhập ý kiến của bạn..."></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Gửi Phản Hồi</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- CSS Cải Tiến cho Nút và Modal -->
<style>
    /* Nút Feedback */
    .btn-feedback {
        position: fixed;
        bottom: 30px;
        right: 30px;
        background-color: #f3a683; /* Màu cam */
        color: white;
        font-size: 1.5rem; /* Kích thước icon */
        padding: 15px; /* Đủ lớn để chứa icon */
        border-radius: 50%; /* Hình tròn */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); /* Bóng đổ */
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .btn-feedback:hover {
        background-color: #e77f67;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
    }

    /* Modal */
    .modal-content {
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .modal-header {
        background-color: #f3a683;
        color: white;
        border-radius: 15px 15px 0 0;
    }

    .modal-title {
        font-weight: bold;
    }

    .btn-close {
        background-color: #e77f67;
    }

    .btn-primary {
        background-color: #f3a683;
        border: none;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #e77f67;
    }

    .form-control {
        border-radius: 10px;
        box-shadow: none;
    }
</style>

<!-- Đừng quên thêm FontAwesome cho icon -->
<script src="https://kit.fontawesome.com/0c7d29a07c.js" crossorigin="anonymous"></script>

<!-- Footer -->
<footer class="text-center">
    <div class="container">
        <p>&copy; 2024 KoiFish Shop - Trang mua bán cá koi và phụ kiện. Mọi quyền được bảo lưu.</p>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>