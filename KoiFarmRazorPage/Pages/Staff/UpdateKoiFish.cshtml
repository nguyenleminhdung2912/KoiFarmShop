@page
@model KoiFarmRazorPage.Pages.Staff.UpdateKoiFish

@{
    Layout = "~/Pages/Shared/_StaffLayout.cshtml";
    ViewData["Title"] = "Update KoiFish";
}
<h2>@ViewData["Title"]</h2>
<div class="content">
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-success">@Model.Message</div>
    }
    <form method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" name="koiFishId" value="@Model.Koifish.KoiFishId" />
        <div class="form-group">
            <label for="koiName" class="form-label">Tên cá koi</label>
            <input type="text" name="koiName" id="koiName" class="form-input" value="@Model.Koifish.Name"/>
            @if (Model.ValidateErrors.ContainsKey("KoiName"))
            {
                @Model.ValidateErrors["KoiName"]
            }
        </div>

        <div class="form-group">
            <label for="KoiImage" class="form-label">Hình ảnh</label>
            <input type="file" name="koiImage" id="KoiImage" class="form-input"/>
            @if (Model.Koifish.ImageData != null)
            {
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Koifish.ImageData)"
                     style="width: 100px; height: 100px; object-fit: cover;"/>
            }
            else
            {
                <span>No Image</span>
            }
            @if (Model.ValidateErrors.ContainsKey("KoiImage"))
            {
                @Model.ValidateErrors["KoiImage"]
            }
        </div>
        <div class="form-group">
            <label for="koiOrigin" class="form-label">Nguồn Gốc</label>
            <input type="text" name="koiOrigin" id="koiOrigin" class="form-input" value="@Model.Koifish.Origin"/>
            @if (Model.ValidateErrors.ContainsKey("KoiOrigin"))
            {
                @Model.ValidateErrors["KoiOrigin"]
            }
        </div>
        <div class="form-group">
            <label for="koiGender" class="form-label">Giới tính</label>
            <select name="koiGender" id="koiGender" class="form-select">
                <option value="">Select Gender </option>
                <option value="Male" selected="@(Model.Koifish.Gender == "Male" ? "selected" : "")">Male</option>
                <option value="Female" selected="@(Model.Koifish.Gender == "Female" ? "selected" : "")">Female</option>
            </select>
            @if (Model.ValidateErrors.ContainsKey("KoiGender"))
            {
                @Model.ValidateErrors["KoiGender"]
            }
        </div>
        <div class="form-group">
            <label for="koiAge" class="form-label">Tuổi</label>
            <input type="text" name="koiAge" id="koiAge" class="form-input" value="@Model.Koifish.Age"/>
            @if (Model.ValidateErrors.ContainsKey("KoiAge"))
            {
                @Model.ValidateErrors["KoiAge"]
            }
        </div>

        <div class="form-group">
            <label for="koiSize" class="form-label">Kích Thước</label>
            <input type="text" name="koiSize" id="koiSize" class="form-input" value="@Model.Koifish.Size"/>
            @if (Model.ValidateErrors.ContainsKey("KoiSize"))
            {
                @Model.ValidateErrors["KoiSize"]
            }
        </div>

        <div class="form-group">
            <label for="koiBreed" class="form-label">Giống Loài</label>
            <input type="text" name="koiBreed" id="koiBreed" class="form-input" value="@Model.Koifish.Breed"/>
            @if (Model.ValidateErrors.ContainsKey("Breed"))
            {
                @Model.ValidateErrors["Breed"]
            }
        </div>

        <div class="form-group">
            <label for="filterRatio" class="form-label">Tỷ lệ sàn lọc</label>
            <input type="text" name="filterRatio" id="filterRatio" class="form-input" value="@Model.Koifish.FilterRatio"/>
            @if (Model.ValidateErrors.ContainsKey("FilterRatio"))
            {
                @Model.ValidateErrors["FilterRatio"]
            }
        </div>

        <div class="form-group">
            <label for="koiPrice" class="form-label">Giá</label>
            <input type="text" name="koiPrice" id="koiPrice" class="form-input" value="@Model.Koifish.Price"/>
            @if (Model.ValidateErrors.ContainsKey("KoiPrice"))
            {
                @Model.ValidateErrors["KoiPrice"]
            }
        </div>
        @* <div class="form-group"> *@
        @*     <label for="koiStatus" class="form-label">Koi Status</label> *@
        @*     <select name="koiStatus" id="koiStatus" class="form-select"> *@
        @*         <option value="">Select Koi Status </option> *@
        @*         <option value="Available" selected="@(Model.Koifish.Status == "Available" ? "selected" : "")">Available</option> *@
        @*         <option value="Out of Stock" selected="@(Model.Koifish.Status == "Available" ? "selected" : "")">Out of Stock</option> *@
        @*     </select> *@
        @*     @if (Model.ValidateErrors.ContainsKey("KoiStatus")) *@
        @*     { *@
        @*         @Model.ValidateErrors["KoiStatus"] *@
        @*     } *@
        @* </div> *@
            <div class="form-group">
                <label for="koiColor" class="form-label">Màu</label>
                <input type="text" name="koiColor" id="koiColor" class="form-input" value="@Model.Koifish.Color"/>
                @if (Model.ValidateErrors.ContainsKey("KoiColor"))
                {
                    @Model.ValidateErrors["KoiColor"]
                }
            </div>


            @* <div class="form-group"> *@
            @*     <label for="koiQuantity" class="form-label">Quantity</label> *@
            @*     <input type="text" name="koiQuantity" id="koiQuantity" class="form-input" value="@Model.Koifish.Quantity"/> *@
            @*     @if (Model.ValidateErrors.ContainsKey("KoiQuantity")) *@
            @*     { *@
            @*         @Model.ValidateErrors["KoiQuantity"] *@
            @*     } *@
            @* </div> *@
            <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>

<!-- Optional: Your custom styles -->
<style>
    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: bold;
        margin-bottom: 5px;
    }

    .form-input,
    .form-textarea,
    .form-select {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        width: 100%;
        font-size: 14px;
    }

    .form-textarea {
        resize: vertical;
        min-height: 100px;
    }

    .btn {
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 14px;
        background-color: #007bff;
        color: white;
    }

    .btn:hover {
        background-color: #0056b3;
    }
</style>