@page
@model KoiFarmRazorPage.Pages.Staff.CreateKoiFish

@{
    Layout = "~/Pages/Shared/_StaffLayout.cshtml";
    ViewData["Title"] = "Create KoiFish";
}

<h2>@ViewData["Title"]</h2>
<div class="content">
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-success">@Model.Message</div>
    }
    <form method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="koiName" class="form-label">Tên cá koi</label>
            <input type="text" name="koiName" id="koiName" class="form-input"/>
            @if (Model.ValidateErrors.ContainsKey("KoiName"))
            {
                @Model.ValidateErrors["KoiName"]
            }
        </div>

        <div class="form-group">
            <label for="KoiImage" class="form-label">Hình ảnh</label>
            <input type="file" name="koiImage" id="KoiImage" class="form-input"/>
            @if (Model.ValidateErrors.ContainsKey("KoiImage"))
            {
                @Model.ValidateErrors["KoiImage"]
            }
        </div>
        <div class="form-group">
            <label for="koiOrigin" class="form-label">Nguồn gốc</label>
            <input type="text" name="koiOrigin" id="koiOrigin" class="form-input"/>
            @if (Model.ValidateErrors.ContainsKey("KoiOrigin"))
            {
                @Model.ValidateErrors["KoiOrigin"]
            }
        </div>
        <div class="form-group">
            <label for="koiGender" class="form-label">Giới tính</label>
            <select name="koiGender" id="koiGender" class="form-select">
