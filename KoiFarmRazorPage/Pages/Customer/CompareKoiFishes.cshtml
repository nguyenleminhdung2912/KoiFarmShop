@page
@model KoiFarmRazorPage.Pages.Customer.CompareKoiFishes

@{
ViewData["Title"] = "So Sánh Cá Koi";
Layout = "~/Pages/Shared/_CustomerLayout.cshtml";
}

<h2 class="mt-4 text-center" style="color: #f3a683;">So Sánh Cá Koi</h2>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg border-0">
                <div class="card-header" style="background-color: #f3a683; color: white; text-align: center;">
                    <h4>So Sánh giữa @Model.KoiFish1.Name và @Model.KoiFish2.Name</h4>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover table-bordered">
                        <thead class="table-light" style="background-color: #f3a683;">
                        <tr>
                            <th>Thuộc Tính</th>
                            <th>Cá Koi 1 (@Model.KoiFish1.Name)</th>
                            <th>Cá Koi 2 (@Model.KoiFish2.Name)</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var difference in Model.Differences)
                        {
                        <tr>
                            <td><strong>@difference.Key</strong></td>
                            <td>@(difference.Value.KoiFish1Value ?? "N/A")</td>
                            <td>@(difference.Value.KoiFish2Value ?? "N/A")</td>
                        </tr>
                        }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer text-center">
                    <a href="/Customer/ViewKoiFish" class="btn" style="background-color: #f3a683; color: white;">Quay lại danh sách cá koi</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Thêm các hiệu ứng hover và phong cách cho các thành phần */
    .card {
        margin-top: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .table th, .table td {
        vertical-align: middle;
        text-align: center;
    }

    .table tbody tr:hover {
        background-color: #ffe6d9; /* Màu sáng hơn khi hover */
    }

    .btn {
        border-radius: 5px;
        padding: 10px 20px;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

    .btn:hover {
        background-color: #e88a5b; /* Màu tối hơn khi hover */
    }

</style>