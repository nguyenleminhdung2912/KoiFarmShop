@page 
@model KoiFarmRazorPage.Pages.Customer.ViewProfileModel

@{
    ViewData["Title"] = "View Profile";
}

<h2 class="text-center">Your Profile</h2>

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h3>User Information</h3>
        </div>
        
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Name:</strong> @Model.UserProfile.Name  </p>
                   
                    <p><strong>Email:</strong>  @Model.UserProfile.Email  </p>
                    <p><strong>Phone:</strong>  @Model.UserProfile.Phone  </p>
                    <p><strong>Role:</strong> @Model.UserProfile.Role </p>
                    
                </div>
               
            </div>
        </div>
    </div>

