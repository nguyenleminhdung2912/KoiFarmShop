@page
@model KoiFarmRazorPage.Pages.Customer.IndexModel
@{
    ViewData["Title"] = "Koi Fish Store - Home";
}

<!-- Bootstrap CDN -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <!-- Banner Section -->
    <div id="bannerCarousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://a-z-animals.com/media/2021/09/Koi-header.jpg" class="d-block w-100" alt="Koi Fish Banner 1">
                <div class="carousel-caption d-none d-md-block">
                    <h1>Welcome to Our Koi Fish Store</h1>
                    <p>Discover beautiful Koi Fish for your pond.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://a-z-animals.com/media/2021/09/Koi-header.jpg" class="d-block w-100" alt="Koi Fish Banner 2">
                <div class="carousel-caption d-none d-md-block">
                    <h1>High-Quality Koi Fish</h1>
                    <p>Handpicked for beauty and health.</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#bannerCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </a>
        <a class="carousel-control-next" href="#bannerCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </a>
    </div>

    <!-- Featured Koi Fish Section -->
    <div class="featured-section mt-5">
        <h2 class="text-center">Featured Koi Fish</h2>
        <div class="row mt-3">
            <div class="col-md-4">
                <div class="card">
                    <img src="images/koi1.jpg" class="card-img-top" alt="Koi Fish 1">
                    <div class="card-body">
                        <h5 class="card-title">Beautiful Kohaku Koi</h5>
                        <p class="card-text">A stunning red and white patterned koi fish.</p>
                        <a href="#" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="images/koi2.jpg" class="card-img-top" alt="Koi Fish 2">
                    <div class="card-body">
                        <h5 class="card-title">Graceful Sanke Koi</h5>
                        <p class="card-text">Elegant and vibrant, a real show-stopper.</p>
                        <a href="#" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="images/koi3.jpg" class="card-img-top" alt="Koi Fish 3">
                    <div class="card-body">
                        <h5 class="card-title">Showa Koi</h5>
                        <p class="card-text">Unique tri-color with black, red, and white.</p>
                        <a href="#" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Koi Fish Care Tips Section -->
    <div class="care-tips-section mt-5">
        <h2 class="text-center">Koi Fish Care Tips</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Clean Water</h5>
                        <p class="card-text">Maintain clean water with proper filtration to ensure the health of your Koi.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Quality Food</h5>
                        <p class="card-text">Feed your Koi high-quality fish food to keep their colors vibrant.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Proper Space</h5>
                        <p class="card-text">Ensure your pond has enough space for the Koi to swim freely.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

<style>
    .carousel-caption {
        background-color: rgba(0, 0, 0, 0.5);
        border-radius: 8px;
        padding: 20px;
    }

    .card {
        margin-bottom: 20px;
    }
</style>