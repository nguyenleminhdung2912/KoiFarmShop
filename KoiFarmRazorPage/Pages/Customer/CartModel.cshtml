@page
@model KoiFarmRazorPage.Pages.Customer.CartModelModel
@{
    ViewData["Title"] = "Giỏ Hàng";
}

<h2>Giỏ Hàng</h2>

@if (Model.UserCart != null)
{
    <h3>Cá Koi</h3>
    <ul>
        @foreach (var koi in Model.UserCart.KoiFishes)
        {
            <li>@koi.Name - Giá: @koi.Price</li>
        }
    </ul>

    <h3>Sản Phẩm Khác</h3>
    <ul>
        @foreach (var product in Model.UserCart.Products)
        {
            <li>@product.Name - Giá: @product.Price</li>
        }
    </ul>

    <h3>Tổng Giá Trị: @Model.UserCart.CalculateTotal()</h3>
}
else
{
    <p>Giỏ hàng của bạn đang trống.</p>
}

<!-- Form để thêm cá Koi và sản phẩm -->
<form method="post" asp-page-handler="AddKoiFish">
    <input type="hidden" name="koiFishId" value="1" /> <!-- Thay đổi ID tương ứng -->
    <button type="submit">Thêm Cá Koi 1</button>
</form>

<form method="post" asp-page-handler="AddProduct">
    <input type="hidden" name="productId" value="1" /> <!-- Thay đổi ID tương ứng -->
    <button type="submit">Thêm Sản Phẩm 1</button>
</form>