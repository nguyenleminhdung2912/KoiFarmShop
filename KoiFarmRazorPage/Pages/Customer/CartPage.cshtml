@page
@using KoiFarmRazorPage.Pages.Shared
@model KoiFarmRazorPage.Pages.Customer.CartPageModel
@{
    ViewData["Title"] = "Shopping Cart";
    Layout = "Shared/_CustomerLayout";
}

<style>
    .container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 20px;
        font-family: Arial, sans-serif;
    }

    h1, h2 {
        color: #333;
        text-align: center;
        margin-bottom: 20px;
    }

    .cart-section {
        margin-bottom: 40px;
    }

    .cart-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    .cart-table th, .cart-table td {
        padding: 12px;
        text-align: center;
        border-bottom: 1px solid #ddd;
    }

    .cart-table th {
        background-color: #f8f9fa;
        font-weight: bold;
        color: #555;
    }

    .cart-table img {
        max-width: 100px;
        border-radius: 5px;
    }

    .quantity-form, .remove-form {
        display: inline;
    }

    .quantity-form input[type="number"] {
        width: 60px;
        text-align: center;
    }

    .remove-form button {
        padding: 5px 10px;
        color: #fff;
        background-color: #dc3545;
        border: none;
        border-radius: 3px;
    }

    .summary {
        text-align: right;
        font-size: 18px;
        margin-top: 30px;
    }

    .summary h3 {
        margin-bottom: 15px;
    }

    .alert-danger {
        color: #d9534f;
        font-weight: bold;
        text-align: center;
        margin-top: 20px;
    }

    .checkout-form {
        margin-top: 30px;
        text-align: center;
    }

    .checkout-form textarea {
        width: 100%;
        min-height: 80px;
        padding: 8px;
        font-size: 16px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .checkout-form button {
        padding: 10px 20px;
        font-size: 18px;
        color: #fff;
        background-color: #007bff;
        border: none;
        border-radius: 3px;
        cursor: pointer;
    }
</style>

<div class="container">
    <h1>Shopping Cart</h1>

    @if (Model.Cart.TotalQuantity == 0)
    {
        <p>Your cart is empty.</p>
    }
    else
    {
        <div class="cart-section">
            <h2>Koi Fish</h2>
            @if (Model.Cart.KoiFishItems.Any())
            {
                <table class="cart-table">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Cart.KoiFishItems)
                        {
                            <tr>
                                <td>
                                    @if (item.Image != null)
                                    {
                                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Image)" alt="@item.Name" />
                                    }
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Price.ToString("C")</td>
                                <td>
                                    <form method="post" asp-page-handler="UpdateQuantity" class="quantity-form">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <input type="hidden" name="itemType" value="KoiFish" />
                                        <input type="number" name="quantity" value="@item.Quantity" min="1" onchange="this.form.submit()" />
                                    </form>
                                </td>
                                <td>@((item.Price * item.Quantity).ToString("C"))</td>
                                <td>
                                    <form method="post" asp-page-handler="RemoveItem" class="remove-form">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <input type="hidden" name="itemType" value="KoiFish" />
                                        <button type="submit">Remove</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No Koi Fish in cart.</p>
            }
        </div>

        <div class="cart-section">
            <h2>Products</h2>
            @if (Model.Cart.ProductItems.Any())
            {
                <table class="cart-table">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Cart.ProductItems)
                        {
                            <tr>
                                <td>
                                    @if (item.Image != null)
                                    {
                                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Image)" alt="@item.Name" />
                                    }
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Price.ToString("C")</td>
                                <td>
                                    <form method="post" asp-page-handler="UpdateQuantity" class="quantity-form">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <input type="hidden" name="itemType" value="Product" />
                                        <input type="number" name="quantity" value="@item.Quantity" min="1" onchange="this.form.submit()" />
                                    </form>
                                </td>
                                <td>@((item.Price * item.Quantity).ToString("C"))</td>
                                <td>
                                    <form method="post" asp-page-handler="RemoveItem" class="remove-form">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <input type="hidden" name="itemType" value="Product" />
                                        <button type="submit">Remove</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No Products in cart.</p>
            }
        </div>

        <div class="summary">
            <h3>Total Items: @Model.Cart.TotalQuantity</h3>
            <h3>Total Price: @Model.Cart.TotalPrice.ToString("C")</h3>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">@Model.ErrorMessage</div>
            }
        </div>

        <form method="post" asp-page-handler="Checkout" class="checkout-form">
            <div class="form-group">
                <label for="shippingAddress">Shipping Address:</label>
                <textarea id="shippingAddress" name="shippingAddress" required></textarea>
            </div>
            <button type="submit">Proceed to Checkout</button>
        </form>
    }
</div>
